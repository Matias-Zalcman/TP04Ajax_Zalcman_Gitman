@{
    ViewData["Title"] = @ViewBag.Pais.Nombre;
}
<h1>@ViewData["Title"]</h1>

<img class="imgDetalle" src="/@ViewBag.Pais.ImgBandera">
<p><b>Población: </b>@ViewBag.Pais.Poblacion</p>
@{
    string mes = "";
    switch(ViewBag.Pais.FechaIndependencia.Month)
    {
        case 1:
            mes = "Enero";
        break;

        case 2:
            mes = "Febrero";
        break;

        case 3:
            mes = "Marzo";
        break;

        case 4:
            mes = "Abril";
        break;

        case 5:
            mes = "Mayo";
        break;

        case 6:
            mes = "Junio";
        break;

        case 7:
            mes = "Julio";
        break;

        case 8:
            mes = "Agosto";
        break;

        case 9:
            mes = "Septiembre";
        break;

        case 10:
            mes = "Octubre";
        break;

        case 11:
            mes = "Noviembre";
        break;

        case 12:
            mes = "Diciembre";
        break;
    }
}
<p><b>Día de la independencia: </b>@ViewBag.Pais.FechaIndependencia.Day de @mes de @ViewBag.Pais.FechaIndependencia.Year</p>
<p><b>Atractivos turísticos: </b>@ViewBag.Pais.AtractivosTuristicos</p>
<p><b>Himno nacional:</b></p>
<audio controls>
    <source src="/@ViewBag.Pais.Himno" type="audio/mp3">
</audio>
